{% extends 'base.html.twig' %}

{% block title %}Вход !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger mt-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3 mt-3">
                            Вы уже вошли как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
                        </div>
                    {% endif %}
                    <img class="mb-4 mt-3" src="{{ asset('images/logotype.png') }}" alt="" width="350" height="100">
                    <h1 class="h3 mb-3 mt-2 font-weight-normal text-center">Вход</h1>
                    <label for="inputEmail">Почта</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Пароль</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <button class="mt-4 btn btn-primary btn-block">Войти</button>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}
